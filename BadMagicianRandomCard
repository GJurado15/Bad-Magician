import java.util.Random;

public class BadMagicianRandomCard {
    private String[] suits = {"Hearts", "Diamonds", "Clubs", "Spades"};
    private String[] ranks = {
        "Ace", "2", "3", "4", "5", "6", "7",
        "8", "9", "10", "Jack", "Queen", "King"
    };
    private Random random = new Random();

    public String getCard(BadMagicianRandomCardChecker checker) {
        String card;
        do {
            String rank = ranks[random.nextInt(ranks.length)];
            String suit = suits[random.nextInt(suits.length)];
            card = rank + " of " + suit;
        } while (checker.hasCard(card)); // keep randomizing until it's not used
        return card;
    }
}
